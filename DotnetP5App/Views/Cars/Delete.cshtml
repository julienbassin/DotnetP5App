@model DotnetP5App.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<p>
    <a asp-action="Index"><i class="far fa-arrow-alt-circle-left"></i></a>
</p>
<div class="container" style="margin-top:30px">
    <div class="card w-75">
        <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Model)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Model)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Trim)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Trim)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Make)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Make)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Year)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Vin)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Vin)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PurchasePrice)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PurchasePrice)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PurchaseDate)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PurchaseDate)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.LotDate)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.LotDate)
                    </dd>
                </dl>
            </p>
            <form asp-action="Delete">
                @Html.HiddenFor(x => x.Id)
                <input type="submit" value="Confirm" class="btn btn-warning" />
            </form>
        </div>
    </div>    
</div>
