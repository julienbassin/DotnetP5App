@model DotnetP5App.ViewModels.SendEmailViewModel
@{
    ViewData["Title"] = "Contact us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin:150px 0">
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Home &nbsp; </a></li>
        <li class="active" style="color:#999"> / User Access</li>
    </ol>
    <div class="row">
        <article class="col-md-9">
            <h1 class="jumbotron-heading">Contact us</h1>
            <hr />
            <p>
                We’d love to hear from you. Interested in working together? Fill out the form below with some info about your project and I will get back to you as soon as I can.
                Please allow a couple days for me to respond.
            </p>
            <br />
            <form action="/Contact/SaveMessage" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="@Model.FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="@Model.LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="@Model.Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea class="form-control" name="Message" placeholder="Type your message here ..." rows="9"></textarea>
                            <span asp-validation-for="@Model.Message" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Send Message</button>
                        </div>
                    </div>
                </div>
            </form>
        </article>
        <aside class="col-md-3 sidebar sidebar-right">
            <h4 class="jumbotron-heading">Address</h4>
            <address>
                234 Hidden Pond Road, Ashland City, TN 37015
            </address>
            <h4 class="jumbotron-heading">Phone:</h4>
            <address>
                +234 23 9873237
            </address>

        </aside>
    </div>
</div>

