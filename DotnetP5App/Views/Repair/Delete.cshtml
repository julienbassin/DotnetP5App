@model DotnetP5App.Models.RepairCar

@{
    ViewData["Title"] = "Delete";}


<div class="container" style="margin:150px auto">
    <div class="row">
        <div class="col-md-12">
            <div class="card w-50 m-auto">
                <div class="card-body text-center">
                    <h4 class="card-title">Are you sure to delete this car model ?</h4>
                    <p class="card-text">
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.RepairCost)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.RepairCost)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>
                    </p>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-primary" />
                        <button asp-controller="Repair" asp-action="Index" class="btn btn-warning">Back to list</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>

