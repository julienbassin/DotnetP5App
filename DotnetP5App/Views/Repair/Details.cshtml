@model DotnetP5App.Models.RepairCar

@{
    ViewData["Title"] = "Details";
}

<div class="container" style="margin:150px auto">
    <div class="row">
        <div class="card w-50 m-auto">
            <div class="card-body text-center">
                <h4 class="card-title">Details of repair: @Model.Id </h4>
                <p class="card-text">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.RepairCost)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RepairCost)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </p>
                <a class="btn btn-primary" asp-controller="Repair" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-warning" asp-controller="Repair" asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</div>