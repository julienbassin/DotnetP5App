@model DotnetP5App.ModelsViewModels.RepairCarViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Amount, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Amount, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <button asp-controller="Repair" asp-action="Index" class="btn btn-warning">Back to list</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>    
</div>


