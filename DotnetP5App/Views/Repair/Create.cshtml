@model DotnetP5App.ModelsViewModels.RepairCarViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin:120px 0">
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a asp-controller="Cars" asp-action="Index">Back to list &nbsp; </a></li>
                <li class="active" style="color:#999"> / Create</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Amount, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Amount, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>    
</div>


